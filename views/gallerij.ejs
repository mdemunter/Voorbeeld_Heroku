<div class="grid">
  <% for(let i=0; i<images.length; i++) { %>
  <div class="grid-item <%=images[i].classes%>">
  <h3 class="title"><%=images[i].title%></h3>
  <img src="<%=images[i].img%>" alt="<%=images[i].alt%>"></img>
  <p class="artist"><%=images[i].artist%></p>
  <p class="year"><%=images[i].year%></p>
  <p class="style"><%=images[i].style%></p>
  <p class="dimensions"><%=images[i].dimensions%></p>
</div>
  <% } %>
